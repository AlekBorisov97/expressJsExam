<h1>Teams</h1>
<form class="search">
  <label>Seach: </label>
  <input type="text">
  <input type="submit" value="Search">
</form>

{{#each teams}}
<div class="teams">
  <div class="team">
    <h2>{{name}}</h2>
    <div class="team-info">
      <h3>Members</h3>
      {{#if members}}
        {{#each members}}
        <p>{{firstName}}</p>
        {{/each}}
      {{else}}
    <p>Team has no members</p>
      {{/if}}
    </div>
    <div class="team-info">
      <h3>Projects</h3>
      {{#if projects}}
      {{#each projects}}
      <p>{{name}}</p>
      {{/each}}
      {{else}}
      <p>Team has no projects</p>
      {{/if}}
    </div>
  </div>
{{/each}}

